<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Ventas" Height="450" Width="600">
    <Grid>
        <Label Content="Ruta Turística" HorizontalAlignment="Left" Margin="30,37,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="cmbRuta" HorizontalAlignment="Left" Margin="135,37,0,0" VerticalAlignment="Top" Width="250"/>

        <Label Content="Cantidad de Personas" HorizontalAlignment="Left" Margin="30,77,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtCantidadPersonas" HorizontalAlignment="Left" Margin="155,77,0,0" VerticalAlignment="Top" Width="100"/>

        <Label Content="Tipo de Cliente" HorizontalAlignment="Left" Margin="30,117,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="cmbTipoCliente" HorizontalAlignment="Left" Margin="135,117,0,0" VerticalAlignment="Top" Width="250"/>

        <Button Content="Registrar Venta" HorizontalAlignment="Left" Margin="30,157,0,0" VerticalAlignment="Top" Width="120" Click="RegistrarVenta_Click"/>

        <DataGrid x:Name="dgVentas" HorizontalAlignment="Left" Margin="30,197,0,0" VerticalAlignment="Top" Width="525" Height="200" AutoGenerateColumns="True"/>
    </Grid>
</Window>
